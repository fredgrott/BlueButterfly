<?xml version="1.0" encoding="utf-8"?>
<com.github.shareme.bluebutterfly.core.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:carbon_cornerRadius="2dp"
    app:carbon_elevation="5dp">

    <LinearLayout
        android:id="@+id/carbon_recentHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="Card icon"
            android:id="@+id/carbon_recentIcon"
            android:layout_width="@dimen/carbon_toolbarItemSize"
            android:layout_height="@dimen/carbon_toolbarItemSize"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/carbon_toolbarItemMargin"
            android:layout_marginStart="@dimen/carbon_toolbarItemMargin"
            android:scaleType="center" />

        <com.github.shareme.bluebutterfly.core.widget.TextView
            android:id="@+id/carbon_recentTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/carbon_toolbarHeight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="?attr/carbon_textAppearanceTitle" />

        <com.github.shareme.bluebutterfly.core.widget.ImageView
            android:id="@+id/carbon_recentClose"
            style="@style/carbon_ImageView.Icon.Inverse"
            android:layout_width="@dimen/carbon_toolbarItemSize"
            android:layout_height="@dimen/carbon_toolbarItemSize"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/carbon_toolbarItemMargin"
            android:layout_marginRight="@dimen/carbon_toolbarItemMargin"
            android:clickable="true"
            app:carbon_src="@raw/carbon_clear" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/carbon_recentContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.github.shareme.bluebutterfly.core.widget.LinearLayout>