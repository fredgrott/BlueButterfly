<?xml version="1.0" encoding="utf-8"?>
<com.github.shareme.bluebutterfly.core.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carbon_popupContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/carbon_padding"
    android:visibility="invisible"
    app:carbon_inAnimation="fade"
    app:carbon_outAnimation="fade">

    <com.github.shareme.bluebutterfly.core.widget.FrameLayout
        android:id="@+id/carbon_popupContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/carbon_colorBackground"
        app:carbon_elevation="@dimen/carbon_elevationFAB">

        <com.github.shareme.bluebutterfly.core.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:paddingBottom="@dimen/carbon_paddingHalf"
            android:paddingTop="@dimen/carbon_paddingHalf" />
    </com.github.shareme.bluebutterfly.core.widget.FrameLayout>
</com.github.shareme.bluebutterfly.core.widget.FrameLayout>